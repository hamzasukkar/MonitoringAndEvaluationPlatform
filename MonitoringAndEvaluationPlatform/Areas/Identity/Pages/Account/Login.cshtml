@page
@using MonitoringAndEvaluationPlatform.Services
@inject IThemeService ThemeService
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null; // Remove layout for standalone login page
    var currentTheme = ThemeService.GetCurrentTheme(HttpContext);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Monitoring & Evaluation System</title>
    
    <!-- Google Fonts for Arabic Support -->
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap and Base Styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Theme-specific CSS -->
    <link rel="stylesheet" href="@currentTheme.CssFile" asp-append-version="true" data-theme-css="@currentTheme.Id" />
    
    <!-- Theme Meta Tags -->
    <meta name="theme-color" content="@(currentTheme.Id == "modern" ? "#667eea" : "#0d6efd")" />
    <meta name="current-theme" content="@currentTheme.Id" />

    <style>
        /* Login Page Specific Styles */
        body {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            padding: 20px;
            position: relative;
            background: var(--login-body-bg, linear-gradient(135deg, #667eea 0%, #764ba2 100%));
            font-family: var(--arabic-font-family, 'Tajawal', 'Inter', sans-serif);
        }

        .login-container {
            width: 100%;
            max-width: 450px;
            position: relative;
        }

        .theme-switcher-login {
            position: absolute;
            top: -60px;
            right: 0;
            z-index: 1000;
        }

        .login-card {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            width: 100%;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            background: var(--card-bg, #ffffff);
            box-shadow: var(--login-card-shadow, 0 20px 40px rgba(0,0,0,0.1));
        }

        .login-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--login-card-hover-shadow, 0 25px 50px rgba(0,0,0,0.15));
        }

        .card-header {
            padding: 1.5rem;
            text-align: center;
            border-bottom: none;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: var(--login-header-bg, linear-gradient(135deg, var(--primary-color, #667eea), var(--secondary-color, #764ba2)));
            color: var(--login-header-text, #ffffff);
        }

        .card-header h2 {
            margin: 0;
            font-weight: 600;
            margin-top: 1rem;
            color: var(--login-header-text, #ffffff);
        }

        .card-body {
            padding: 2rem;
            background: var(--card-bg, #ffffff);
        }

        .form-control {
            border-radius: 8px;
            padding: 12px 15px;
            transition: all 0.3s;
            border: 1px solid var(--input-border, #ddd);
            background: var(--input-bg, #ffffff);
            color: var(--text-color, #333);
        }

        .form-control:focus {
            border-color: var(--primary-color, #667eea);
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        .btn-login {
            border: none;
            border-radius: 8px;
            padding: 12px;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s;
            background: var(--login-btn-bg, linear-gradient(135deg, var(--primary-color, #667eea), var(--secondary-color, #764ba2)));
            color: var(--login-btn-text, #ffffff);
        }

        .btn-login:hover {
            transform: translateY(-2px);
            background: var(--login-btn-hover-bg, linear-gradient(135deg, var(--primary-color-hover, #5a6fd8), var(--secondary-color-hover, #6a4190)));
        }

        .brand-logo {
            margin-bottom: 0.5rem;
            filter: drop-shadow(0 0 5px rgba(0,0,0,0.5));
            width: 60px;
            height: 60px;
        }

        .validation-summary-valid {
            display: none;
        }

        .forgot-password {
            color: var(--link-color, var(--primary-color, #667eea));
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .forgot-password:hover {
            color: var(--link-hover-color, var(--primary-color-hover, #5a6fd8));
        }

        /* Theme Switcher Compact Style for Login */
        .login-theme-switcher .dropdown-toggle {
            padding: 0.5rem 1rem;
            font-size: 0.875rem;
            border-radius: 20px;
            min-width: 120px;
            background: var(--theme-switcher-bg, rgba(255,255,255,0.9));
            border: 1px solid var(--theme-switcher-border, rgba(255,255,255,0.3));
            color: var(--theme-switcher-text, #333);
            backdrop-filter: blur(10px);
        }

        .login-theme-switcher .dropdown-menu {
            min-width: 200px;
            background: var(--dropdown-bg, #ffffff);
            border: 1px solid var(--dropdown-border, rgba(0,0,0,0.1));
            box-shadow: var(--dropdown-shadow, 0 10px 30px rgba(0,0,0,0.1));
        }

        /* RTL Support for Arabic */
        [dir="rtl"] .theme-switcher-login {
            right: auto;
            left: 0;
        }

        [dir="rtl"] .form-floating > label {
            right: 0.75rem;
            left: auto;
            transform-origin: 100% 0;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Theme Switcher for Login Page -->
        <div class="theme-switcher-login">
            <div class="login-theme-switcher">
                @await Html.PartialAsync("_ThemeSwitcher")
            </div>
        </div>
        
        <div class="login-card shadow-lg">
            <div class="card-header">
                <!-- Assuming your new logo is syrian_emblem.png in the img folder -->
                <img src="~/img/syrian_emblem.png" alt="Syrian Emblem" class="brand-logo">
                <h2>نظام الرصد والتقييم</h2>
            </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="alert alert-danger mb-4"></div>

                <div class="mb-4">
                    <div class="form-floating">
                        <input asp-for="Input.UserName" class="form-control" placeholder="Username" />
                        <label asp-for="Input.UserName">اسم المستخدم</label>
                        <span asp-validation-for="Input.UserName" class="text-danger small mt-1 d-block"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" placeholder="Password" type="password" />
                        <label asp-for="Input.Password">كلمة المرور</label>
                        <span asp-validation-for="Input.Password" class="text-danger small mt-1 d-block"></span>
                    </div>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label">تذكرني</label>
                </div>

                <button type="submit" class="btn btn-primary btn-login w-100 mb-3">
                    <i class="fas fa-sign-in-alt me-2"></i> تسجيل الدخول
                </button>

                <div class="text-center mt-3">
                    <a asp-page="./ForgotPassword" class="forgot-password">
                        <i class="fas fa-key me-1"></i> هل نسيت كلمة المرور؟
                    </a>
                </div>
            </form>
        </div>
    </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/theme-switcher.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
