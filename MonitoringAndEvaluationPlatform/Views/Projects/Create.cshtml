@model MonitoringAndEvaluationPlatform.Models.Project
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ProjectsLayout.cshtml";
}
<h4>Program</h4>
<hr />
@{
    var startDate = DateTime.Today.ToString("yyyy-MM-dd");
    var endDate = DateTime.Today.ToString("yyyy-MM-dd");
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectName" class="control-label">Project Name</label>
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegionCode" class="control-label">Region</label>
                <select asp-for="RegionCode" class="form-control" asp-items="ViewBag.Region"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProjectManagerCode" class="control-label">Project Manager</label>
                <select asp-for="ProjectManagerCode" class="form-control" asp-items="ViewBag.ProjectManager"></select>
            </div>

            <div class="form-group">
                <label asp-for="SuperVisorCode" class="control-label">SuperVisor</label>
                <select asp-for="SuperVisorCode" class="form-control" asp-items="ViewBag.SuperVisor"></select>
            </div>
            <div class="form-group">
                <label asp-for="MinistryCode" class="control-label">Ministry</label>
                <select asp-for="MinistryCode" class="form-control" asp-items="ViewBag.Ministry"></select>
            </div>

            <div class="form-group">
                <label asp-for="DonorCode" class="control-label">Donor</label>
                <select asp-for="DonorCode" class="form-control" asp-items="ViewBag.Donor"></select>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedBudget" class="control-label">Estimated Budget</label>
                <input asp-for="EstimatedBudget" value="0" class="form-control" />
                <span asp-validation-for="EstimatedBudget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RealBudget" class="control-label">Real Budget</label>
                <input asp-for="RealBudget" value="0" class="form-control" />
                <span asp-validation-for="RealBudget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Start Date</label>
                <input type="date" asp-for="StartDate" value="@startDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">End Date</label>
                <input type="date" asp-for="EndDate" value="@endDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Upload Files</label>
                <input type="file" name="UploadedFiles" multiple class="form-control" />
            </div>

            @*       
                     <div class="form-group">
                <label asp-for="Trend" class="control-label"></label>
                <input asp-for="Trend" class="form-control" />
                <span asp-validation-for="Trend" class="text-danger"></span>
           
            *@
      
        
       
      @*       <div class="form-group">
                <label>Select Indicators</label>
                <select name="selectedIndicators" class="form-control" multiple>
                    @foreach (var indicator in ViewBag.Indicators)
                    {
                        <option value="@indicator.Code">@indicator.Name</option>
                    }
                </select>
            </div> *@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}