@model MonitoringAndEvaluationPlatform.Models.Project
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Localization

@{
    ViewData["Title"] = "Create New Project";
    Layout = "~/Views/Shared/_DashboardHomeLayout.cshtml";

    var startDate = DateTime.Today.ToString("yyyy-MM-dd");
    var endDate = DateTime.Today.ToString("yyyy-MM-dd");

    var governorates = ViewBag.Governorates as List<Governorate>;
}
<!-- Dashboard Header -->
<div class="dashboard-header">
    <h1 class="dashboard-title">
        <i class="fas fa-plus-circle me-3"></i>
        @Localizer["Create New Project"]
    </h1>
    <p class="dashboard-subtitle">
        @Localizer["Fill in the project details below to create a comprehensive project plan"]
    </p>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="chart-card mb-4">
                <h3 class="chart-title">
                    <i class="fas fa-edit"></i>
                    @Localizer["Project Information"]
                </h3>
                <div class="chart-content">
                    @using (Html.BeginForm("Create", "Projects", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation modern-form", novalidate = "novalidate" }))
                    {
                        <div class="row">
                            <!-- Left Column -->
                            <div class="col-md-6">
                                <div class="form-section">
                                    <div class="section-header">
                                        <i class="fas fa-info-circle me-2"></i>
                                        <h5 class="section-title">@Localizer["Basic Information"]</h5>
                                    </div>

                                    <!-- Project Name -->
                                    <div class="modern-input-group">
                                        <label asp-for="ProjectName" class="modern-label">
                                            <i class="fas fa-project-diagram me-2"></i>
                                            @Localizer["Project Name"]
                                        </label>
                                        <input asp-for="ProjectName" class="modern-input" placeholder="Enter project name" required />
                                        <span asp-validation-for="ProjectName" class="validation-message"></span>
                                    </div>

                                    <!-- Plans Count calculated from project duration -->
                                    <div class="modern-input-group">
                                        <label for="PlansCount" class="modern-label">
                                            <i class="fas fa-calendar-alt me-2"></i>
                                            @Localizer["Plans Count"] (Months)
                                        </label>
                                        <input type="number"
                                               id="PlansCount"
                                               name="PlansCount"
                                               class="modern-input readonly-input"
                                               value="1"
                                               min="1"
                                               readonly />
                                        <small class="input-help-text">@Localizer["Automatically calculated based on project duration"]</small>
                                    </div>

                                    <!-- Location Hierarchy -->
                                    <div class="location-section">
                                        <div class="subsection-header">
                                            <i class="fas fa-map-marker-alt me-2"></i>
                                            <h6 class="subsection-title">@Localizer["Project Location"]</h6>
                                        </div>
                                        <div id="location-selector" class="location-selectors">
                                            <div class="location-dropdown">
                                                <select id="governorate" class="modern-select">
                                                    <option value="">-- اختر المحافظة --</option>
                                                    @foreach (var gov in governorates)
                                                    {
                                                        var displayName = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName == "ar"
                                                        ? gov.AR_Name
                                                        : gov.EN_Name;
                                                        <option value="@gov.Code">@displayName</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="location-dropdown">
                                                <select id="district" class="modern-select"></select>
                                            </div>
                                            <div class="location-dropdown">
                                                <select id="subdistrict" class="modern-select"></select>
                                            </div>
                                            <div class="location-dropdown">
                                                <select id="community" class="modern-select"></select>
                                            </div>
                                        </div>
                                        <div class="location-actions">
                                            <button type="button" id="add-location" class="btn btn-modern-primary">
                                                <i class="fas fa-plus me-2"></i>@Localizer["Add Location"]
                                            </button>
                                            <button type="button" id="reset-dropdowns" class="btn btn-modern-secondary">
                                                <i class="fas fa-redo me-2"></i>@Localizer["Reset"]
                                            </button>
                                        </div>
                                        <ul id="selected-locations" class="selected-locations-list"></ul>
                                        <input type="hidden" id="location-data" name="selections" />
                                        <div id="location-validation-alert" style="display:none;" class="validation-alert"></div>
                                    </div>
                                </div>






                                    <!-- Dates -->
                                    <div class="timeline-section">
                                        <div class="subsection-header">
                                            <i class="fas fa-clock me-2"></i>
                                            <h6 class="subsection-title">@Localizer["Project Timeline"]</h6>
                                        </div>
                                        <div class="timeline-inputs">
                                            <div class="modern-input-group">
                                                <label asp-for="StartDate" class="modern-label">
                                                    <i class="fas fa-play me-2"></i>
                                                    @Localizer["Start Date"]
                                                </label>
                                                <input type="date" asp-for="StartDate" value="@startDate" class="modern-input" required />
                                                <span asp-validation-for="StartDate" class="validation-message"></span>
                                            </div>
                                            <div class="modern-input-group">
                                                <label asp-for="EndDate" class="modern-label">
                                                    <i class="fas fa-stop me-2"></i>
                                                    @Localizer["End Date"]
                                                </label>
                                                <input type="date" asp-for="EndDate" value="@endDate" class="modern-input" required />
                                                <span asp-validation-for="EndDate" class="validation-message"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Right Column -->
                            <div class="col-md-6">
                                <!-- Budget Card -->
                                <div class="form-section">
                                    <div class="section-header">
                                        <i class="fas fa-dollar-sign me-2"></i>
                                        <h5 class="section-title">@Localizer["Budget Information"]</h5>
                                    </div>
                                    <div class="section-content">
                                        <div class="modern-input-group">
                                            <label asp-for="EstimatedBudget" class="modern-label">
                                                <i class="fas fa-coins me-2"></i>
                                                @Localizer["Estimated Budget"]
                                            </label>
                                            <div class="input-with-icon">
                                                <span class="input-icon">$</span>
                                                <input asp-for="EstimatedBudget" class="modern-input with-icon" min="0.01" step="0.01" required />
                                            </div>
                                            <span asp-validation-for="EstimatedBudget" class="validation-message"></span>
                                        </div>
                                                                                </div>
                                </div>

                                <!-- Stakeholders Section -->
                                <div class="form-section">
                                    <div class="section-header">
                                        <i class="fas fa-users me-2"></i>
                                        <h5 class="section-title">@Localizer["Stakeholders"]</h5>
                                    </div>
                                    <div class="section-content">
                                        <div class="modern-input-group">
                                            <label class="modern-label">
                                                <i class="fas fa-industry me-2"></i>
                                                @Localizer["Sectors"]
                                            </label>
                                            <select asp-for="Sectors" class="modern-select multiple" asp-items="ViewBag.SectorList" multiple size="4">
                                                <option disabled>@Localizer["Select one or more sectors"]</option>
                                            </select>
                                            <small class="input-help-text">@Localizer["Hold Ctrl/Cmd to select multiple sectors"]</small>
                                        </div>
                                        <div class="modern-input-group">
                                            <label asp-for="ProjectManagerCode" class="modern-label">
                                                <i class="fas fa-user-tie me-2"></i>
                                                @Localizer["Project Manager"]
                                            </label>
                                            <select asp-for="ProjectManagerCode" class="modern-select" asp-items="ViewBag.ProjectManager">
                                                <option value="">Select Project Manager</option>
                                            </select>
                                        </div>

                                        <div class="modern-input-group">
                                            <label asp-for="SuperVisorCode" class="modern-label">
                                                <i class="fas fa-user-check me-2"></i>
                                                @Localizer["Supervisor"]
                                            </label>
                                            <select asp-for="SuperVisorCode" class="modern-select" asp-items="ViewBag.SuperVisor">
                                                <option value="">Select Supervisor</option>
                                            </select>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label">@Localizer["Ministries"]</label>
                                            <select asp-for="Ministries" class="form-select" asp-items="ViewBag.MinistryList" multiple size="4">
                                                <option disabled>@Localizer["Select one or more ministry"]</option>
                                            </select>
                                            <small class="text-muted">@Localizer["Hold Ctrl/Cmd to select multiple ministry"]</small>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="GoalCode" class="form-label">@Localizer["SDGs"]</label>
                                            <select asp-for="GoalCode" class="form-select" asp-items="ViewBag.Goals">
                                                <option value="">@Localizer["SDGs"]</option>
                                            </select>
                                        </div>

                                        @*  To Check *@
                                        <div class="mb-3">
                                            <label class="form-label">@Localizer["Donor"]</label>
                                            <select asp-for="Donors" class="form-select" asp-items="ViewBag.Donor" multiple size="4">
                                                <option disabled>@Localizer["Select one or more donor"]</option>
                                            </select>
                                            <small class="text-muted">@Localizer["Hold Ctrl/Cmd to select multiple donor"]</small>
                                        </div>

                                    </div>
                                </div>

                                <!-- Indicators Selection -->
                                <div class="card mb-4 border-0 shadow-sm">
                                    <div class="card-header bg-success text-white">
                                        <h6 class="mb-0">
                                            <i class="fas fa-bullseye me-2"></i>@Localizer["Project Indicators"]
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        @* Multi-select indicators (commented out)
                                        <div class="mb-3">
                                            <label class="form-label">@Localizer["Select Indicators"]</label>
                                            <select name="SelectedIndicators" class="form-select" multiple size="8" id="indicatorSelect">
                                                @if (ViewBag.Indicators != null)
                                                {
                                                    @foreach (var indicator in ViewBag.Indicators as List<Indicator>)
                                                    {
                                                        <option value="@indicator.IndicatorCode" data-target="@indicator.Target">
                                                            [@indicator.IndicatorCode] @indicator.Name
                                                            @if (indicator.Target > 0)
                                                            {
                                                                <text> (Target: @indicator.Target.ToString("N2"))</text>
                                                            }
                                                        </option>
                                                    }
                                                }
                                            </select>
                                            <small class="text-success">
                                                <i class="fas fa-info-circle me-1"></i>
                                                @Localizer["Hold Ctrl/Cmd to select multiple indicators. Selected indicators will be linked to this project for progress tracking."]
                                            </small>
                                        </div>
                                        *@

                                        <!-- Single select indicator -->
                                        <div class="mb-3">
                                            <label class="form-label">@Localizer["Select Indicator"]</label>
                                            <select name="SelectedIndicators" class="form-select" id="indicatorSelect">
                                                <option value="">@Localizer["Select an indicator"]</option>
                                                @if (ViewBag.Indicators != null)
                                                {
                                                    @foreach (var indicator in ViewBag.Indicators as List<Indicator>)
                                                    {
                                                        <option value="@indicator.IndicatorCode" data-target="@indicator.Target">
                                                            [@indicator.IndicatorCode] @indicator.Name
                                                            @if (indicator.Target > 0)
                                                            {
                                                                <text> (Target: @indicator.Target.ToString("N2"))</text>
                                                            }
                                                        </option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <!-- Files Upload -->
                                <div class="card border-0 shadow-sm">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0">@Localizer["Project Documents"]</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label class="form-label">@Localizer["Upload Files"]</label>
                                            <input type="file" name="UploadedFiles" multiple class="form-control" />
                                            <small class="text-muted">Maximum file size: 10MB. Allowed types: PDF, DOC, XLS, JPG, PNG</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        <div class="form-actions">
                            <a href="@Url.Action("Index")" class="btn btn-modern-secondary">
                                <i class="fas fa-arrow-left me-2"></i>@Localizer["Cancel"]
                            </a>
                            <button type="submit" class="btn btn-modern-primary">
                                <i class="fas fa-save me-2"></i>@Localizer["Create Project"]
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

