@model MonitoringAndEvaluationPlatform.Models.Project

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_ProjectsLayout.cshtml";
}

<h1>Edit</h1>

<h4>Program</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectID" />
            <div class="form-group">
                <label asp-for="ProjectName" class="control-label"></label>
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EstimatedBudget" class="control-label"></label>
                <input asp-for="EstimatedBudget" class="form-control" />
                <span asp-validation-for="EstimatedBudget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RealBudget" class="control-label"></label>
                <input asp-for="RealBudget" class="form-control" />
                <span asp-validation-for="RealBudget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Regions</label>
                <select asp-for="Regions" class="form-control" asp-items="ViewBag.RegionList" multiple></select>
            </div>


            <div class="form-group">
                <label asp-for="SectorCode" class="control-label">Sector</label>
                <select asp-for="SectorCode" class="form-control" asp-items="ViewBag.Sector"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProjectManagerCode" class="control-label">Project Manager</label>
                <select asp-for="ProjectManagerCode" class="form-control" asp-items="ViewBag.ProjectManager"></select>
            </div>

            <div class="form-group">
                <label asp-for="SuperVisorCode" class="control-label">SuperVisor</label>
                <select asp-for="SuperVisorCode" class="form-control" asp-items="ViewBag.SuperVisor"></select>
            </div>
            <div class="form-group">
                <label asp-for="MinistryCode" class="control-label">Ministry</label>
                <select asp-for="MinistryCode" class="form-control" asp-items="ViewBag.Ministry"></select>
            </div>

            <div class="form-group">
                <label asp-for="DonorCode" class="control-label">Donor</label>
                <select asp-for="DonorCode" class="form-control" asp-items="ViewBag.Donor"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

