@model MonitoringAndEvaluationPlatform.Models.Project

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_ProjectsLayout.cshtml";
}

<h1>Edit</h1>

<h4>Program</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectID" />
            <div class="form-group">
                <label asp-for="ProjectName" class="control-label"></label>
                <input asp-for="ProjectName" class="form-control" />
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedBudget" class="control-label"></label>
                <input asp-for="EstimatedBudget" class="form-control" />
                <span asp-validation-for="EstimatedBudget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RealBudget" class="control-label"></label>
                <input asp-for="RealBudget" class="form-control" />
                <span asp-validation-for="RealBudget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trend" class="control-label"></label>
                <input asp-for="Trend" class="form-control" />
                <span asp-validation-for="Trend" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectManager" class="control-label"></label>
                <input asp-for="ProjectManager" class="form-control" />
                <span asp-validation-for="ProjectManager" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuperVisor" class="control-label"></label>
                <input asp-for="SuperVisor" class="form-control" />
                <span asp-validation-for="SuperVisor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Donor" class="control-label"></label>
                <input asp-for="Donor" class="form-control" />
                <span asp-validation-for="Donor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Region" class="control-label"></label>
                <input asp-for="Region" class="form-control" />
                <span asp-validation-for="Region" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="performance" class="control-label"></label>
                <input asp-for="performance" class="form-control" />
                <span asp-validation-for="performance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisbursementPerformance" class="control-label"></label>
                <input asp-for="DisbursementPerformance" class="form-control" />
                <span asp-validation-for="DisbursementPerformance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FieldMonitoring" class="control-label"></label>
                <input asp-for="FieldMonitoring" class="form-control" />
                <span asp-validation-for="FieldMonitoring" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImpactAssessment" class="control-label"></label>
                <input asp-for="ImpactAssessment" class="form-control" />
                <span asp-validation-for="ImpactAssessment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Select Indicators</label>
                <select name="selectedIndicators" class="form-control" multiple>
                    @foreach (var indicator in ViewBag.Indicators)
                    {
                        <option value="@indicator.Code" selected="@(Model.Indicators.Any(i => i.Code == indicator.Code) ? "selected" : null)">
                            @indicator.Name
                        </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

