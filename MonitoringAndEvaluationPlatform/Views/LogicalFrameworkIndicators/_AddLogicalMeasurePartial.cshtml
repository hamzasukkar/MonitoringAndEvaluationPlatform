@using MonitoringAndEvaluationPlatform.Enums
@model MonitoringAndEvaluationPlatform.Models.LogicalMeasure
<form id="addMeasureForm" asp-controller="LogicalMeasures" asp-action="CreateFromDetails" method="post" onsubmit="submitForm(event)">
    <input type="hidden" asp-for="LogicalFrameworkIndicatorIndicatorCode" />

    <div class="row mb-3">
        <div class="col">
            <label asp-for="Date" class="form-label">Date</label>
            <input asp-for="Date" class="form-control" type="date" required />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="Value" class="form-label">Value</label>
            <input asp-for="Value" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="ValueType" class="form-label">Value Type</label>
            <select asp-for="ValueType" class="form-select" asp-items="Html.GetEnumSelectList<MeasureValueType>()">
                <option value="">-- Select --</option>
            </select>
            <span asp-validation-for="ValueType" class="text-danger"></span>
        </div>
        <div class="col align-self-end">
            <button type="submit" class="btn btn-primary mt-2">Add Measure</button>
        </div>
    </div>
</form>
