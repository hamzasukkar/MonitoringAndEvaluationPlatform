<p>
    <a asp-controller="Measures" asp-action="Create" asp-route-type="logical" asp-route-projectId="2">Create New Measure</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Value</th>
            <th>Value Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Measures)
        {
            <tr>
                <td>
                    @item.Date.ToString("yyyy-MM-dd")
                </td>

                <td>
                    @item.Value
                </td>
                <td>
                    @item.ValueType
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="card shadow-sm p-4 mb-4">
    <h5 class="mb-3">Indicator Performance Over Time</h5>
    <canvas id="lineChart" width="800" height="400"></canvas>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.LogicalFrameworkIndicator.IndicatorCode">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<script>
    async function loadLineChart(indicatorCode) {
        const response = await fetch(`/Dashboard/IndicatorTrend?indicatorCode=${indicatorCode}`);
        const data = await response.json();

        const realData = data.real;
        const targetData = data.target;

        const allDates = [...new Set([...realData.map(d => d.date), ...targetData.map(d => d.date)])].sort();

        const realMap = Object.fromEntries(realData.map(d => [d.date, d.value]));
        const targetMap = Object.fromEntries(targetData.map(d => [d.date, d.value]));

        const realValues = allDates.map(date => realMap[date] ?? null);
        const targetValues = allDates.map(date => targetMap[date] ?? null);

        const ctx = document.getElementById('lineChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: allDates,
                datasets: [
                    {
                        label: 'Real',
                        data: realValues,
                        borderColor: '#4caf50',
                        backgroundColor: 'rgba(76, 175, 80, 0.2)',
                        tension: 0.3,
                        pointRadius: 4,
                        pointHoverRadius: 6
                    },
                    {
                        label: 'Target',
                        data: targetValues,
                        borderColor: '#f44336',
                        backgroundColor: 'rgba(244, 67, 54, 0.2)',
                        tension: 0.3,
                        pointRadius: 4,
                        pointHoverRadius: 6
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    tooltip: {
                        mode: 'index',
                        intersect: false
                    }
                },
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Date'
                        }
                    },
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Value'
                        }
                    }
                }
            }
        });
    }

    // Call this with a valid indicator code
    loadLineChart(@Model.LogicalFrameworkIndicator.IndicatorCode); // Change to your actual IndicatorCode
</script>

