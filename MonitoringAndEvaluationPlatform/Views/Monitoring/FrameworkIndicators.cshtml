@using MonitoringAndEvaluationPlatform.Helpers;
@using Microsoft.AspNetCore.Razor.TagHelpers;
@model IEnumerable<MonitoringAndEvaluationPlatform.Models.Indicator>
@{
	ViewData["Title"] = "Monitoring";
	Layout = "~/Views/Shared/_ResultsFrameworkLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Health Framework Dashboard</title>
	<link rel="stylesheet" href="~/css/progress-bars.css" />
</head>
<body>
	<div class="framework-container">
		@foreach (var item in Model)
		{
			var metrics = new[]
			{
		new { Value = Math.Round(item.IndicatorsPerformance), Label = "Performance Assessment" },
		new { Value = Math.Round(item.DisbursementPerformance), Label = "Disbursement" },
		new { Value = Math.Round(item.FieldMonitoring), Label = "Monitoring" },
		new { Value = Math.Round(item.ImpactAssessment), Label = "Assessment" }
		};

			<div class="framework-card">
				<div class="framework-header">
					<h2>@item.Name</h2>
					<div class="outcome-badge">Projects: 3</div>
				</div>

				@foreach (var metric in metrics)
				{
					var progressClass = ProgressHelper.GetProgressClass(metric.Value);
					var classes = progressClass.Split(' ');

					<div class="metric">
						<div class="metric-value @classes[1]">@metric.Value%</div>
						<div class="metric-label">@metric.Label</div>
						<div class="progress-container">
							<div class="progress-bar @classes[0]" style="width: @metric.Value%"></div>
						</div>
					</div>
				}

				<div class="outcome-stats">
					<div class="stat-grid">
						<div class="stat-item">
							<a asp-controller="Monitoring" asp-action="" asp-route-id="">
								<div class="stat-value">2</div>
								<div class="stat-label">Projects</div>
							</a>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</body>
</html>