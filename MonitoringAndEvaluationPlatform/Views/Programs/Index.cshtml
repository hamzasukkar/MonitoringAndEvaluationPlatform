@model IEnumerable<MonitoringAndEvaluationPlatform.Models.Program>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ProgramsLayout.cshtml"; 
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstimatedBudget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RealBudget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trend)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.performance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisbursementPerformance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FieldMonitoring)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImpactAssessment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatedBudget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RealBudget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trend)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.performance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisbursementPerformance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FieldMonitoring)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImpactAssessment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProjectID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProjectID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
