@model MonitoringAndEvaluationPlatform.Models.Activity
@using MonitoringAndEvaluationPlatform.Enums

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ProjectsLayout.cshtml";
}

<h1>Create</h1>

<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityType" class="control-label"></label>
                <select asp-for="ActivityType" class="form-control">
                    @foreach (var type in Enum.GetValues(typeof(ActivityType)))
                    {
                        <option value="@((int)type)">@type</option>
                    }
                </select>
                <span asp-validation-for="ActivityType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActionPlanCode" class="control-label"></label>
                <select asp-for="ActionPlanCode" class ="form-control" asp-items="ViewBag.ActionPlanCode"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

