@model IEnumerable<MonitoringAndEvaluationPlatform.Models.Measure>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ProjectsLayout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a asp-controller="Projects" asp-action="Details" asp-route-id="@ViewBag.ProjectID" class="nav-link">Project</a>
            </li>
            <li class="nav-item">
                <a class="nav-link">Measures<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a asp-controller="Plans" asp-action="ProjectPlans" asp-route-id="@ViewBag.ProjectID" class="nav-link">Plans</a>
            </li>

            <li class="nav-item">
                <a asp-controller="ActionPlans" asp-action="ActionPlan" class="nav-link">Action Plans</a>
            </li>
            <li class="nav-item">
                <a asp-action="Index" asp-controller="Activities" class="nav-link">Activity</a>
            </li>
        </ul>
    </div>
</nav>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValueType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Indicator)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Indicator.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Code">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Code">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Code">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
