@model MonitoringAndEvaluationPlatform.Models.LogicalFramework

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ProgramsLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>LogicalFramework</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Trend)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trend)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IndicatorsPerformance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IndicatorsPerformance)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProjectID)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Code">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Trend</th>
            <th scope="col">Performance</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.logicalFrameworkIndicators)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Trend</td>
                <td>
                    <div class="progress">
                        <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar"
                             aria-valuenow="@item.IndicatorsPerformance"
                             aria-valuemin="0" aria-valuemax="100"
                             style="width:@item.IndicatorsPerformance%">
                            @item.IndicatorsPerformance%
                        </div>
                    </div>
                </td>
                <td>
                    <div class="d-inline">
                        <form asp-controller="LogicalFrameworkIndicators" asp-action="Details" asp-route-id="@item.Code" method="get" style="display: inline;">
                            <button class="btn btn-sm btn-primary" title="View">
                                <i class="bi bi-eye"></i>
                            </button>
                        </form>
                        <form asp-controller="LogicalFrameworkIndicators" asp-action="Edit" asp-route-id="@item.Code" method="get" style="display: inline;">
                            <button class="btn btn-sm btn-warning" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                        </form>
                        <form asp-controller="LogicalFrameworkIndicators" asp-action="Delete" asp-route-id="@item.Code" method="post" style="display: inline;">
                            <button class="btn btn-sm btn-danger" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>