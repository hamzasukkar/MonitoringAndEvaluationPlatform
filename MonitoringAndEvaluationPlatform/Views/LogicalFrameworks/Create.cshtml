@model MonitoringAndEvaluationPlatform.Models.LogicalFramework
@using MonitoringAndEvaluationPlatform.Enums
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ProjectsLayout.cshtml";
}

<h1>Create</h1>

<h4>Creating Logical Framework for Project: <strong>@ViewBag.ProjectName</strong></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    @foreach (var type in Enum.GetValues(typeof(LogicalFrameworkType)))
                    {
                        <option value="@((int)type)">@type</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (ViewBag.RelatedFrameworks is List<LogicalFramework> frameworks && frameworks.Any())
{
    <h5>Existing Logical Frameworks</h5>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Performance</th>
                <th>Actions</th> <!-- New column -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in frameworks)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Type.ToString()</td>
                    <td>@item.Performance%</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Code" title="Edit">
                            <i class="bi bi-pencil-square text-warning" style="font-size: 1.2rem;"></i>
                        </a>
                        &nbsp;
                        <a asp-action="Delete" asp-route-id="@item.Code" title="Delete">
                            <i class="bi bi-trash text-danger" style="font-size: 1.2rem;"></i>
                        </a>
                        &nbsp;
                        <a asp-controller="LogicalFrameworkIndicators" asp-action="Create" asp-route-logicalFrameworkCode="@item.Code" title="Add Indicator">
                            <i class="bi bi-plus-circle text-success" style="font-size: 1.2rem;"></i>
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Logical Frameworks have been added yet for this project.</p>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

