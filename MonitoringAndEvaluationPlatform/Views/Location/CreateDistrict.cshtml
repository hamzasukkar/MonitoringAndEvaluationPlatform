@model District

@{
    ViewData["Title"] = "Create District";
}

<h2>Create District</h2>

<form asp-action="CreateDistrict" method="post">
    <div class="form-group">
        <label asp-for="GovernorateCode">Governorate</label>
        <select asp-for="GovernorateCode" class="form-control" asp-items="ViewBag.Governorates"></select>
        <span asp-validation-for="GovernorateCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Districts" class="btn btn-secondary">Cancel</a>
</form>
