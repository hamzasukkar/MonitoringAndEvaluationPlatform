@using MonitoringAndEvaluationPlatform.ViewModel
@model LocationInputViewModel

@{
    ViewData["Title"] = "CreateLocation";
    Layout = "~/Views/Shared/_SetUpLayout.cshtml";
}


<form asp-action="CreateLocation" method="post">
    <div class="form-group">
        <label>Governorate</label>
        <input asp-for="GovernorateName" class="form-control" />
    </div>
    <div class="form-group">
        <label>District</label>
        <input asp-for="DistrictName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Sub District</label>
        <input asp-for="SubDistrictName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Community</label>
        <input asp-for="CommunityName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>


