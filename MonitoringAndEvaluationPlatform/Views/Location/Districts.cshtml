@model IEnumerable<District>

@{
    ViewData["Title"] = "Districts";
}

<h2>Districts</h2>

<a asp-action="CreateDistrict" class="btn btn-primary mb-2">Add New District</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Governorate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dist in Model)
        {
            <tr>
                <td>@dist.EN_Name</td>
                <td>@dist.Governorate?.EN_Name</td>
            </tr>
        }
    </tbody>
</table>
