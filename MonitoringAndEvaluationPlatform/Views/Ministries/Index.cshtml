@model IEnumerable<MonitoringAndEvaluationPlatform.Models.Ministry>
@using MonitoringAndEvaluationPlatform.Helpers
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Localization
@{
    ViewData["Title"] = "Ministries";
    Layout = "~/Views/Shared/_DashboardHomeLayout.cshtml";
    var culture = Context.Features.Get<IRequestCultureFeature>().RequestCulture.Culture.Name;
}
<head>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</head>

<!-- Dashboard Header -->
<div class="dashboard-header">
    <div class="header-content">
        <div class="page-title-section">
            <div class="page-breadcrumb">
                <a href="@Url.Action("Index", "Home")" class="breadcrumb-link">
                    <i class="fas fa-home"></i>
                    @Localizer["Home"]
                </a>
                <i class="fas fa-chevron-right breadcrumb-separator"></i>
                <span class="current-page">@Localizer["Ministries"]</span>
            </div>
            <h1 class="page-title">@Localizer["Ministry Management"]</h1>
            <p class="page-description">@Localizer["Manage government ministries and track their performance"]</p>
        </div>
    </div>
</div>

@await Html.PartialAsync("_ManagementNavigation")

<!-- Quick Add Section -->
<div class="chart-card mb-4">
    <div class="chart-title">
        <i class="fas fa-university"></i>
        @Localizer["Add New Ministry"]
    </div>
    <form id="createMinistryForm" class="row g-3">
        @Html.AntiForgeryToken()
        <div class="col-md-2">
            <label for="Logo" class="form-label fw-bold">
                <i class="fas fa-icons me-2"></i>@Localizer["Logo"]
            </label>
            <input type="text" name="Logo" class="form-control form-control-lg"
                   placeholder="@Localizer["Enter emoji"]" maxlength="10" />
            <small class="text-muted">@Localizer["e.g., 🏥 🏛️ ⚖️"]</small>
        </div>
        <div class="col-md-3">
            <label for="MinistryDisplayName_AR" class="form-label fw-bold">
                <i class="fas fa-building me-2"></i>@Localizer["Ministry Display Name (Arabic)"]
            </label>
            <input type="text" name="MinistryDisplayName_AR" class="form-control form-control-lg" required
                   placeholder="@Localizer["Enter ministry name in Arabic"]" />
        </div>
        <div class="col-md-3">
            <label for="MinistryDisplayName_EN" class="form-label fw-bold">
                <i class="fas fa-building me-2"></i>@Localizer["Ministry Display Name (English)"]
            </label>
            <input type="text" name="MinistryDisplayName_EN" class="form-control form-control-lg" required
                   placeholder="@Localizer["Enter ministry name in English"]" />
        </div>
        <div class="col-md-2">
            <label for="MinistryUserName" class="form-label fw-bold">
                <i class="fas fa-user me-2"></i>@Localizer["Ministry User Name"]
            </label>
            <input type="text" name="MinistryUserName" class="form-control form-control-lg"
                   placeholder="@Localizer["Enter username"]" />
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <div class="d-grid w-100">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus-circle me-2"></i>@Localizer["Create a New Entity"]
                </button>
            </div>
        </div>
    </form>
</div>

<!-- Ministries Table -->
<div class="chart-card">
    <div class="chart-title">
        <i class="fas fa-university"></i>
        @Localizer["Ministries"] (@Model.Count())
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover modern-table">
                <thead class="table-header">
                    <tr>
                        <th class="sortable-header" style="width: 80px;">
                            <div class="header-link">
                                <i class="fas fa-icons me-2"></i>@Localizer["Logo"]
                            </div>
                        </th>
                        <th class="sortable-header">
                            <div class="header-link">
                                <i class="fas fa-building me-2"></i>@Localizer["Ministry Display Name"]
                            </div>
                        </th>
                        <th class="sortable-header">
                            <div class="header-link">
                                <i class="fas fa-user me-2"></i>@Localizer["Ministry User Name"]
                            </div>
                        </th>
                        <th class="text-center">
                            <div class="header-link">
                                <i class="fas fa-chart-line me-2"></i>@Localizer["Indicators Performance"]
                            </div>
                        </th>
                        <th class="text-center">
                            <div class="header-link">
                                <i class="fas fa-money-bill-wave me-2"></i>@Localizer["Disbursement Performance"]
                            </div>
                        </th>
                        <th class="text-center">
                            <div class="header-link">
                                <i class="fas fa-cogs me-2"></i>@Localizer["Actions"]
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody id="ministriesTableBody">
                    @foreach (var item in Model)
                    {
                        string indicatorsClass = ProgressBarHelper.GetProgressBarClass(item.IndicatorsPerformance);
                        string disbursementClass = ProgressBarHelper.GetProgressBarClass(item.DisbursementPerformance);
                        double IndicatorsPerformance = Math.Round(item.IndicatorsPerformance, 2);
                        double DisbursementPerformance = Math.Round(item.DisbursementPerformance, 2);

                        <tr id="ministry-row-@item.Code" class="table-row">
                            <td class="text-center ministry-logo-cell">
                                <span id="ministry-logo-@item.Code" class="ministry-logo-view" style="font-size: 2rem;">
                                    @(string.IsNullOrEmpty(item.Logo) ? "🏛️" : item.Logo)
                                </span>
                                <input type="text" id="ministry-logo-input-@item.Code"
                                       class="form-control ministry-logo-edit d-none text-center" value="@item.Logo" placeholder="Logo" maxlength="10" style="font-size: 1.5rem;" />
                            </td>
                            <td class="ministry-name-cell">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <span id="ministry-displayname-@item.Code" class="ministry-displayname-view ministry-name-text ministry-clickable" onclick="viewMinistryProjects(@item.Code, '@(System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ar" ? item.MinistryDisplayName_AR : item.MinistryDisplayName_EN)')">
                                            @(System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ar" ? item.MinistryDisplayName_AR : item.MinistryDisplayName_EN)
                                        </span>
                                        <input type="text" id="ministry-displayname-ar-input-@item.Code"
                                               class="form-control ministry-displayname-edit d-none" value="@item.MinistryDisplayName_AR" placeholder="Arabic Name" />
                                        <input type="text" id="ministry-displayname-en-input-@item.Code"
                                               class="form-control ministry-displayname-edit d-none mt-1" value="@item.MinistryDisplayName_EN" placeholder="English Name" />
                                    </div>
                                </div>
                            </td>
                            <td class="ministry-username-cell">
                                <span id="ministry-username-@item.Code" class="ministry-username-view">
                                    @item.MinistryUserName
                                </span>
                                <input type="text" id="ministry-username-input-@item.Code"
                                       class="form-control ministry-username-edit d-none" value="@item.MinistryUserName" />
                            </td>
                            <td class="text-center" title="@Localizer["Indicators Performance"]: @IndicatorsPerformance%">
                                @await Html.PartialAsync("_ProgressBar", Tuple.Create(IndicatorsPerformance, indicatorsClass))
                            </td>
                            <td class="text-center" title="@Localizer["Disbursement Performance"]: @DisbursementPerformance%">
                                @await Html.PartialAsync("_ProgressBar", Tuple.Create(DisbursementPerformance, disbursementClass))
                            </td>
                            <td class="text-center">
                                <div class="btn-group action-buttons" role="group">
                                    <button class="btn btn-outline-primary btn-sm action-btn"
                                            id="edit-btn-@item.Code"
                                            onclick="toggleMinistryEdit(@item.Code)" title="@Localizer["Edit"]">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-outline-danger btn-sm action-btn" title="@Localizer["Delete"]"
                                            onclick="deleteMinistry(@item.Code)">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="stat-icon warning mx-auto mb-3" style="width: 80px; height: 80px; font-size: 2rem;">
                <i class="fas fa-university"></i>
            </div>
            <h4 class="text-muted">@Localizer["No ministries found"]</h4>
            <p class="text-muted">@Localizer["Create your first ministry to get started"]</p>
        </div>
    }
</div>

