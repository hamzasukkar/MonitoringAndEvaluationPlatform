<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MonitoringAndEvaluationPlatform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MonitoringAndEvaluationPlatform.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .topbar {
            width: 100%;
            background-color: #b70000;
            color: white;
            padding: 10px 20px;
            box-sizing: border-box;
            display: flex;
            align-items: center;
        }

            .topbar .title {
                font-size: 20px;
                font-weight: bold;
            }

            .topbar .nav-links {
                display: flex;
                gap: 15px;
            }

        .nav-link:focus, .nav-link:hover {
            color: black;
        }

        .nav-item a {
            color: white;
            text-decoration: none;
            font-size: 16px;
        }

        .dropdown-menu a {
            color: black;
            text-decoration: none;
            font-size: 16px;
        }

        .topbar .nav-links a:hover {
            text-decoration: underline;
        }

        .main {
            display: flex;
            flex: 1;
        }

        .sidebar {
            width: 250px;
            background-color: #f4f4f4;
            border-right: 1px solid #ddd;
            padding: 0;
            box-sizing: border-box;
        }

            .sidebar ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

                .sidebar ul li {
                    padding: 15px;
                    cursor: pointer;
                    border-bottom: 1px solid #ddd;
                }

                    .sidebar ul li:hover {
                        background-color: #ddd;
                    }

        .content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        iframe {
            width: 100%;
            height: 100%;
            border: none;
        }

        .title {
            font-size: 20px;
        }

        .unstyled-link {
            text-decoration: none; /* Remove underline */
            color: black !important; /* Inherit color from parent (e.g., `li`) */
        }

            .unstyled-link:focus,
            .unstyled-link:hover,
            .unstyled-link:active {
                text-decoration: none; /* Remove underline on hover, focus, and active */
                color: black !important; /* Prevent color changes */
            }
    </style>
</head>
<body>
    <header>
        <div class="topbar">
            <div class="title">Monitoring & Evaluation System</div>
            <div class="nav-links">
                <ul class="nav">
                    <!-- Dropdown for Results Ministrys -->
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="/Ministrys/Index" role="button" aria-expanded="false">
                            Ministrys
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="/Sectors/Index" role="button" aria-expanded="false">
                            Sectors
                        </a>
                    </li>
                    <!-- Other links -->
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="/Regions/index" role="button" aria-expanded="false">
                            Regions
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="/Donors/index" role="button" aria-expanded="false">
                            Donors
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="/SuperVisors/index" role="button" aria-expanded="false">
                            SuperVisors
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="/ProjectManagers/index" role="button" aria-expanded="false">
                            ProjectManagers
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="resultsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Others
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="resultsDropdown">
                            <li><a class="dropdown-item" href="#" onclick="alert('Sub-item 1 clicked!');">Unit</a></li>
                            <li><a class="dropdown-item" href="#" onclick="alert('Sub-item 1 clicked!');">Categories</a></li>
                            <li><a class="dropdown-item" href="#" onclick="alert('Sub-item 1 clicked!');">Types</a></li>
                            <li><a class="dropdown-item" href="#" onclick="alert('Sub-item 1 clicked!');">Status 1</a></li>
                            <li><a class="dropdown-item" href="#" onclick="alert('Sub-item 1 clicked!');">Status 2</a></li>
                        </ul>
                    </li>
                    <li>
                        <a class="nav-link dropdown-toggle" href="#" id="resultsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img class="rounded-circle oe_topbar_avatar" width="23" height="23" src="~/img/profile.jpeg" />
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="main">
        <!-- Sidebar -->
        <div class="sidebar">
            <ul class="list-unstyled">
                <li class="d-flex align-items-center">
                    <img src="~/img/results.png"
                         alt="Results Icon" class="me-2" width="24" height="24">
                    <a class="unstyled-link" href="/Frameworks/Index"> Results Framework</a>
                </li>
                <li class="d-flex align-items-center" >
                    <img src="~/img/setup.png"
                         alt="Setup Icon" class="me-2" width="24" height="24">
                    <a class="unstyled-link" href="/Ministrys/Index">Set Up</a>
                </li>
                <li class="d-flex align-items-center" >
                    <img src="~/img/programs.png"
                         alt="Programs Icon" class="me-2" width="24" height="24">
                    <a class="unstyled-link" href="/Programs/Index">Programs</a>
                </li>
                <li class="d-flex align-items-center" >
                    <img src="~/img/monitor.png"
                         alt="Monitoring Icon" class="me-2" width="24" height="24">
                    <a class="unstyled-link" href="/Frameworks/Monitoring">Monitoring</a>

                </li>
                <li class="d-flex align-items-center" >
                    <img src="~/img/dashboard.png"
                         alt="Dashboard Icon" class="me-2" width="24" height="24">
                    <a class="unstyled-link" href="/Frameworks/Dashboard">Dashboard</a>
                </li>
                <li class="d-flex align-items-center" >
                    <img src="~/img/document.png"
                         alt="Assessment Icon" class="me-2" width="24" height="24">
                    Assessment
                </li>
                <li class="d-flex align-items-center" >
                    <img src="~/img/settings.png"
                         alt="Settings Icon" class="me-2" width="24" height="24">
                    Settings
                </li>
            </ul>
        </div>


        <!-- Content Area with Iframe -->
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>



   

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MonitoringAndEvaluationPlatform - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
