@using MonitoringAndEvaluationPlatform.Services
@inject IThemeService ThemeService
@{
    var currentTheme = ThemeService.GetCurrentTheme(Context);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Monitoring & Evaluation Platform</title>
    
    <!-- Bootstrap and Base Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MonitoringAndEvaluationPlatform.styles.css" asp-append-version="true" />
    <link href="~/css/bootstrap-icons.css" rel="stylesheet">
    
    <!-- Theme-specific CSS -->
    <link rel="stylesheet" href="@currentTheme.CssFile" asp-append-version="true" data-theme-css="@currentTheme.Id" />
    
    <!-- Theme Meta Tags -->
    <meta name="theme-color" content="@(currentTheme.Id == "modern" ? "#667eea" : "#0d6efd")" />
    <meta name="current-theme" content="@currentTheme.Id" />
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .topbar {
            width: 100%;
            background-color: #b70000;
            color: white;
            padding: 10px 20px;
            box-sizing: border-box;
            display: flex;
            align-items: center;
        }

            .topbar .title {
                font-size: 20px;
                font-weight: bold;
            }

            .topbar .nav-links {
                display: flex;
                gap: 15px;
            }

        .nav-link:focus, .nav-link:hover {
            color: black;
        }

        .nav-item a {
            color: white;
            text-decoration: none;
            font-size: 16px;
        }

        .dropdown-menu a {
            color: black;
            text-decoration: none;
            font-size: 16px;
        }

        .topbar .nav-links a:hover {
            text-decoration: underline;
        }

        .main {
            display: flex;
            flex: 1;
        }

        .sidebar {
            width: 250px;
            background-color: #f4f4f4;
            border-right: 1px solid #ddd;
            padding: 0;
            box-sizing: border-box;
        }

            .sidebar ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

                .sidebar ul li {
                    padding: 15px;
                    cursor: pointer;
                    border-bottom: 1px solid #ddd;
                }

                    .sidebar ul li:hover {
                        background-color: #ddd;
                    }

        .content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        iframe {
            width: 100%;
            height: 100%;
            border: none;
        }

        .title {
            font-size: 20px;
        }

        .unstyled-link {
            text-decoration: none; /* Remove underline */
            color: black !important; /* Inherit color from parent (e.g., `li`) */
        }

            .unstyled-link:focus,
            .unstyled-link:hover,
            .unstyled-link:active {
                text-decoration: none; /* Remove underline on hover, focus, and active */
                color: black !important; /* Prevent color changes */
            }

    </style>
</head>
<body class="theme-@currentTheme.Id">
    <header>
        <div class="topbar">
            <div class="title">Monitoring & Evaluation System</div>
            <div class="nav-links">
                <ul class="nav">
                    <!-- Dropdown for Results Framework -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="resultsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Settings
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="resultsDropdown">
                            <li><a class="dropdown-item" href="/Categorys/Index">Category</a></li>
                        </ul>
                    </li>
                    
                    <!-- Theme Switcher -->
                    <li class="nav-item me-3">
                        @await Html.PartialAsync("_ThemeSwitcher")
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="main">
        <!-- Sidebar -->
        <div class="sidebar">
            <ul class="list-unstyled">
                <li class="d-flex align-items-center">
                    <img src="~/img/results.png"
                         alt="Results Icon" class="me-2" width="24" height="24">
                    <a class="unstyled-link" href="/Frameworks/Index"> Results Framework</a>
                </li>
                <li class="d-flex align-items-center" >
                    <img src="~/img/setup.png"
                         alt="Setup Icon" class="me-2" width="24" height="24">
                    <a class="unstyled-link" href="/Ministries/Index">Set Up</a>
                </li>
                <li class="d-flex align-items-center" >
                    <img src="~/img/programs.png"
                         alt="Programs Icon" class="me-2" width="24" height="24">
                    <a class="unstyled-link" href="/Projects/Index">Projects</a>
                </li>
                <li class="d-flex align-items-center" onclick="location.href='/Monitoring/Index';" style="cursor: pointer;">
                    <img src="~/img/monitor.png" alt="Monitoring Icon" class="me-2" width="24" height="24">
                    <a class="unstyled-link" href="/Monitoring/Index" onclick="event.stopPropagation();">Monitoring</a>
                </li>

                <li class="d-flex align-items-center" >
                    <img src="~/img/dashboard.png"
                         alt="Dashboard Icon" class="me-2" width="24" height="24">
                    <a class="unstyled-link" href="/Dashboard/Index">Dashboard</a>
                </li>
@*                 <li class="d-flex align-items-center">
                    <img src="~/img/settings.png"
                         alt="Settings Icon" class="me-2" width="24" height="24">
                    Settings
                </li> *@
            </ul>
        </div>


        <!-- Content Area with Iframe -->
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/theme-switcher.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
