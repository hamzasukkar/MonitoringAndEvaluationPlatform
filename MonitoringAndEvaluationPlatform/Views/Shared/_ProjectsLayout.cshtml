@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@using MonitoringAndEvaluationPlatform.Services
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IThemeService ThemeService
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Localization
@{
	var culture = Context.Features.Get<IRequestCultureFeature>()?.RequestCulture.Culture.Name;
	var dir = culture == "ar" ? "rtl" : "ltr";
	var lang = culture == "ar" ? "ar" : "en";
	var currentTheme = ThemeService.GetCurrentTheme(Context);
}

<!DOCTYPE html>
<html lang="@lang" dir="@dir">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - @Localizer["Monitoring & Evaluation System"]</title>
	<!-- Bootstrap and Base Styles -->
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
	<link rel="stylesheet" href="~/css/all.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
	
	<!-- Theme-specific CSS -->
	<link rel="stylesheet" href="@currentTheme.CssFile" asp-append-version="true" data-theme-css="@currentTheme.Id" />
	
	<!-- Theme Meta Tags -->
	<meta name="theme-color" content="@(currentTheme.Id == "modern" ? "#667eea" : "#0d6efd")" />
	<meta name="current-theme" content="@currentTheme.Id" />
</head>
<body class="theme-@currentTheme.Id">
	<header>
		<div class="topbar">
			<div class="title">@Localizer["Monitoring & Evaluation System"]</div>
			<div class="theme-switcher-container">
				@await Html.PartialAsync("_ThemeSwitcher")
			</div>
		</div>
	</header>

	<div class="main">
		<!-- Sidebar -->
		<div class="sidebar">
			<ul class="list-unstyled">
				<li>
					<a class="d-flex align-items-center" href="/Frameworks/Index">
						<i class="fas fa-sitemap me-3"></i>
						<span>@Localizer["Results Framework"]</span>
					</a>
				</li>
				<li>
					<a class="d-flex align-items-center" href="/Ministries/Index">
						<i class="fas fa-cogs me-3"></i>
						<span>@Localizer["Set Up"]</span>
					</a>
				</li>
				<li>
					<a class="d-flex align-items-center" href="/Projects/Index">
						<i class="fas fa-project-diagram me-3"></i>
						<span>@Localizer["Projects"]</span>
					</a>
				</li>
				<li>
					<a class="d-flex align-items-center" href="/Monitoring/Index">
						<i class="fas fa-chart-line me-3"></i>
						<span>@Localizer["Monitoring"]</span>
					</a>
				</li>
				<li>
					<a class="d-flex align-items-center" href="/Dashboard/Index">
						<i class="fas fa-tachometer-alt me-3"></i>
						<span>@Localizer["Dashboard"]</span>
					</a>
				</li>
		@* 		<li>
					<a class="d-flex align-items-center" href="#">
						<i class="fas fa-sliders-h me-3"></i>
						<span>Settings</span>
					</a>
				</li> *@
			</ul>
		</div>

		<!-- Content Area -->
		<div class="container-full">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>
	</div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/theme-switcher.js" asp-append-version="true"></script>
	@*  @await RenderSectionAsync("Scripts", required: false) *@
</body>
</html>
