@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Monitoring & Evaluation System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ProjectsLayout.css" />
</head>
<body>
    <header>
        <div class="topbar">
            <div class="title">Monitoring & Evaluation System</div>
            <div class="nav-links">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Projects/Index">
                            <i class="fas fa-project-diagram me-1"></i> Projects
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Measures/index">
                            <i class="fas fa-ruler-combined me-1"></i> Measures
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ActionPlans/Index">
                            <i class="fas fa-tasks me-1"></i> Action Plans
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Activities/Index">
                            <i class="fas fa-running me-1"></i> Activities
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Plans/index">
                            <i class="fas fa-calendar-alt me-1"></i> Plans
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img class="rounded-circle me-2" width="28" height="28" src="~/img/profile.jpeg" />
                            @if (SignInManager.IsSignedIn(User))
                            {
                                var user = await UserManager.GetUserAsync(User);
                                <span>@user?.UserName</span>
                            }
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="main">
        <!-- Sidebar -->
        <div class="sidebar">
            <ul class="list-unstyled">
                <li>
                    <a class="d-flex align-items-center" href="/Frameworks/Index">
                        <i class="fas fa-sitemap me-3"></i>
                        <span>Results Framework</span>
                    </a>
                </li>
                <li>
                    <a class="d-flex align-items-center" href="/Ministries/Index">
                        <i class="fas fa-cogs me-3"></i>
                        <span>Set Up</span>
                    </a>
                </li>
                <li>
                    <a class="d-flex align-items-center" href="/Projects/Index">
                        <i class="fas fa-project-diagram me-3"></i>
                        <span>Projects</span>
                    </a>
                </li>
                <li>
                    <a class="d-flex align-items-center" href="/Monitoring/Index">
                        <i class="fas fa-chart-line me-3"></i>
                        <span>Monitoring</span>
                    </a>
                </li>
                <li>
                    <a class="d-flex align-items-center" href="/Dashboard/Index">
                        <i class="fas fa-tachometer-alt me-3"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a class="d-flex align-items-center" href="#">
                        <i class="fas fa-sliders-h me-3"></i>
                        <span>Settings</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Content Area -->
        <div class="container-full">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
