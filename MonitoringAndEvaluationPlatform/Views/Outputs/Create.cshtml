@model MonitoringAndEvaluationPlatform.Models.Output

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ResultsFrameworkLayout.cshtml";
}

<h1>Create</h1>

<h4>Output</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <!-- Weight Field -->
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            @{
                var isOutcomeLocked = ViewBag.SelectedOutcomeCode != null;
            }
            <!-- Hidden input when FrameworkCode is provided -->
            @if (isOutcomeLocked)
            {
                <input type="hidden" asp-for="OutcomeCode" value="@ViewBag.SelectedOutcomeCode" />
            }
            else
            {
                <div class="form-group">
                    <label asp-for="OutcomeCode" class="control-label"></label>
                    <select asp-for="OutcomeCode" class="form-control" asp-items="ViewBag.OutcomeCode"></select>
                </div>
            }
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

