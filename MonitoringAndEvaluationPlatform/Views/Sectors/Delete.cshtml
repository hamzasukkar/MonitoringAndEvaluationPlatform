@model MonitoringAndEvaluationPlatform.Models.Sector
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_SetUpLayout.cshtml";
}
@{
    var requestCultureFeature = Context.Features.Get<IRequestCultureFeature>();
    var culture = requestCultureFeature.RequestCulture.Culture.Name;
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Sector</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer["Name"]
        </dt>
        <dd class = "col-sm-10">
            @if (culture.StartsWith("ar"))
            {
                <strong>@Html.DisplayFor(modelItem => modelItem.AR_Name)</strong>
            }
            else
            {
                <strong>@Html.DisplayFor(modelItem => modelItem.EN_Name)</strong>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Code" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
