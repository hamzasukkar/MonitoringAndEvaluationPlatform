@model IEnumerable<MonitoringAndEvaluationPlatform.Models.Plan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ProjectsLayout.cshtml";
}


<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a asp-controller="Projects" asp-action="Details" asp-route-id="@ViewBag.ProjectID" class="nav-link">Project <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a asp-action="ProjectMeasures" asp-controller="Measures" class="nav-link">Measures</a>
            </li>
            @*   <li class="nav-item">
                <a asp-action="Index" asp-controller="LogicalFrameworks" asp-route-id="@Model.ProjectID" class="nav-link">Logical Framework</a>
            </li> *@
            <li class="nav-item">
                <a asp-controller="Plans" asp-action="ProjectPlans" class="nav-link">Plans <span class="sr-only">(current)</span></a>
            </li>

            <li class="nav-item">
                <a asp-controller="ActionPlans" asp-action="ActionPlan" class="nav-link">Action Plans</a>
            </li>
            <li class="nav-item">
                <a asp-action="Index" asp-controller="Activities" class="nav-link">Activity</a>
            </li>
        </ul>
    </div>
</nav>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Realised)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Planned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Realised)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activity.Code)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Code">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Code">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Code">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
