@model IEnumerable<MonitoringAndEvaluationPlatform.Models.Indicator>
@using MonitoringAndEvaluationPlatform.Helpers
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Localization

@{
    ViewData["Title"] = "Indicators and Projects";
    Layout = "~/Views/Shared/_DashboardHomeLayout.cshtml";
}

<!-- Dashboard Header -->
<div class="dashboard-header">
    <h1 class="dashboard-title">
        <i class="fas fa-project-diagram me-3"></i>
        @Localizer["Indicators and Projects"]
    </h1>
    <p class="dashboard-subtitle">
        @Localizer["View indicators and their related projects with comprehensive filtering capabilities"]
    </p>
    <div class="dashboard-actions">
        <a asp-action="Index" asp-route-frameworkCode="@ViewData["frameworkCode"]"
           asp-route-subOutputCode="@ViewData["subOutputCode"]" class="btn btn-outline-light me-2">
            <i class="fas fa-list me-2"></i>@Localizer["Regular View"]
        </a>
        <a asp-action="IndicatorAndProjectTable" asp-route-frameworkCode="@ViewData["frameworkCode"]"
           asp-route-subOutputCode="@ViewData["subOutputCode"]" class="btn btn-light">
            <i class="fas fa-table me-2"></i>@Localizer["Table View"]
        </a>
    </div>
</div>

<div class="container-fluid">

    <!-- Filter Form -->
    <div class="chart-card mb-4">
        <h3 class="chart-title">
            <i class="fas fa-filter"></i>
            @Localizer["Filter Options"]
        </h3>
        <div class="chart-content">
            <form asp-action="IndicatorAndProject" method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="projectId" class="form-label fw-semibold">@Localizer["Filter by Project"]</label>
                    @Html.DropDownList("projectId", ViewData["Projects"] as SelectList, 
                        Localizer["-- All Projects --"].Value, new { @class = "form-select modern-select" })
                </div>
                <div class="col-md-4">
                    <label for="searchString" class="form-label fw-semibold">@Localizer["Search"]</label>
                    <input type="text" name="searchString" class="form-control modern-input"
                           placeholder="@Localizer["Search by indicator or project name..."]"
                           value="@ViewData["CurrentFilter"]">
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-gradient-primary me-2">
                        <i class="fas fa-search me-1"></i> @Localizer["Apply Filters"]
                    </button>
                    <a asp-action="IndicatorAndProject" class="btn btn-modern-secondary">
                        <i class="fas fa-times me-1"></i> @Localizer["Clear"]
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="chart-card">
        <h3 class="chart-title">
            <i class="fas fa-chart-line"></i>
            @Localizer["Indicators and Related Projects"]
        </h3>
        <div class="chart-content">
            @if (Model.Any())
            {
                <div class="modern-accordion" id="indicatorAccordion">
                    @{
                        int index = 0;
                    }
                    @foreach (var indicator in Model)
                    {
                        string indicatorsClass = ProgressBarHelper.GetProgressBarClass(indicator.IndicatorsPerformance);
                        string disbursementClass = ProgressBarHelper.GetProgressBarClass(indicator.DisbursementPerformance);
                        double IndicatorsPerformance = Math.Round(indicator.IndicatorsPerformance, 0);
                        string accordionId = $"collapse{index}";
                        
                        <div class="modern-accordion-item mb-4">
                            <h2 class="modern-accordion-header" id="heading@(index)">
                                <button class="modern-accordion-button @(index == 0 ? "" : "collapsed")" type="button" 
                                        data-bs-toggle="collapse" data-bs-target="#@accordionId" 
                                        aria-expanded="@(index == 0 ? "true" : "false")" aria-controls="@accordionId">
                                    <div class="w-100 d-flex justify-content-between align-items-center me-3">
                                        <div class="indicator-info">
                                            <div class="indicator-name">@indicator.Name</div>
                                            <div class="indicator-meta">
                                                @Localizer["SubOutput"]: 
                                                <span class="modern-badge badge-info">@indicator.SubOutput?.Name</span>
                                                @Localizer["Framework"]: 
                                                <span class="modern-badge badge-primary">@indicator.SubOutput?.Output?.Outcome?.Framework?.Name</span>
                                            </div>
                                        </div>
                                        <div class="d-flex align-items-center performance-section">
                                            <div class="me-3 performance-container">
                                                <div class="performance-label">@Localizer["Performance"]</div>
                                                <div class="progress-bar-modern">
                                                    <div class="progress-fill-modern shimmer" style="width: @IndicatorsPerformance%; background: linear-gradient(90deg, var(--primary-color), var(--primary-dark));"></div>
                                                    <span class="progress-text">@IndicatorsPerformance%</span>
                                                </div>
                                            </div>
                                            <div class="project-count">
                                                <i class="fas fa-project-diagram me-1"></i>
                                                @indicator.ProjectIndicators.Count()
                                            </div>
                                        </div>
                                    </div>
                                </button>
                            </h2>
                            <div id="@accordionId" class="modern-accordion-collapse collapse @(index == 0 ? "show" : "")" 
                                 aria-labelledby="heading@(index)" data-bs-parent="#indicatorAccordion">
                                <div class="modern-accordion-body">
                                    <div class="row g-4">
                                        <!-- Indicator Details Column -->
                                        <div class="col-md-4">
                                            <div class="detail-card">
                                                <div class="detail-card-header">
                                                    <i class="fas fa-info-circle me-2"></i>
                                                    @Localizer["Indicator Details"]
                                                </div>
                                                <div class="detail-card-body">
                                                    <div class="detail-row">
                                                        <span class="detail-label">@Localizer["Target"]:</span>
                                                        <span class="detail-value">@indicator.Target</span>
                                                    </div>
                                                    <div class="detail-row">
                                                        <span class="detail-label">@Localizer["Weight"]:</span>
                                                        <span class="detail-value">@indicator.Weight</span>
                                                    </div>
                                                    <div class="detail-row">
                                                        <span class="detail-label">@Localizer["Performance"]:</span>
                                                        <span class="detail-value performance-value">@IndicatorsPerformance%</span>
                                                    </div>
                                                    <div class="detail-row">
                                                        <span class="detail-label">@Localizer["Disbursement"]:</span>
                                                        <span class="detail-value disbursement-value">@Math.Round(indicator.DisbursementPerformance, 1)%</span>
                                                    </div>
                                                    <div class="detail-actions">
                                                        <a asp-action="Details" asp-route-id="@indicator.IndicatorCode" 
                                                           class="btn btn-modern-primary">
                                                            <i class="fas fa-eye me-1"></i> @Localizer["View Details"]
                                                        </a>
                                                        <a asp-action="Edit" asp-route-id="@indicator.IndicatorCode" 
                                                           class="btn btn-modern-warning">
                                                            <i class="fas fa-edit me-1"></i> @Localizer["Edit Indicator"]
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Related Projects Column -->
                                        <div class="col-md-8">
                                            <div class="detail-card projects-card">
                                                <div class="detail-card-header d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <i class="fas fa-project-diagram me-2"></i>
                                                        @Localizer["Related Projects"] (@indicator.ProjectIndicators.Count())
                                                    </div>
                                                    @if (!indicator.ProjectIndicators.Any())
                                                    {
                                                        <a asp-action="Create" asp-controller="Projects" 
                                                           asp-route-indicatorId="@indicator.IndicatorCode"
                                                           class="btn btn-modern-success btn-sm">
                                                            <i class="fas fa-plus me-1"></i> @Localizer["Add Project"]
                                                        </a>
                                                    }
                                                </div>
                                                <div class="detail-card-body">
                                                    @if (indicator.ProjectIndicators.Any())
                                                    {
                                                        <div class="modern-table-container">
                                                            <table class="modern-table">
                                                                <thead class="table-header">
                                                                    <tr>
                                                                        <th><i class="fas fa-project-diagram me-2"></i>@Localizer["Project Name"]</th>
                                                                        <th><i class="fas fa-dollar-sign me-2"></i>@Localizer["Budget"]</th>
                                                                        <th><i class="fas fa-chart-line me-2"></i>@Localizer["Performance"]</th>
                                                                        <th><i class="fas fa-calendar me-2"></i>@Localizer["Start Date"]</th>
                                                                        <th><i class="fas fa-cogs me-2"></i>@Localizer["Actions"]</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var projectIndicator in indicator.ProjectIndicators)
                                                                    {
                                                                        var project = projectIndicator.Project;
                                                                        string projectPerformanceClass = ProgressBarHelper.GetProgressBarClass(project.performance);
                                                                        
                                                                        <tr class="table-row-hover">
                                                                            <td>
                                                                                <a asp-action="Details" asp-controller="Projects" 
                                                                                   asp-route-id="@project.ProjectID" 
                                                                                   class="project-link">
                                                                                    @project.ProjectName
                                                                                </a>
                                                                            </td>
                                                                            <td class="budget-cell">@project.EstimatedBudget.ToString("C")</td>
                                                                            <td>
                                                                                <div class="performance-container-small">
                                                                                    <div class="progress-bar-modern small">
                                                                                        <div class="progress-fill-modern" style="width: @project.performance%; background: linear-gradient(90deg, @(project.performance > 75 ? "var(--success-color)" : project.performance > 50 ? "var(--warning-color)" : "var(--danger-color)"), var(--primary-dark));"></div>
                                                                                        <span class="progress-text">@Math.Round(project.performance, 1)%</span>
                                                                                    </div>
                                                                                </div>
                                                                            </td>
                                                                            <td class="date-cell">@project.StartDate.ToString("MMM yyyy")</td>
                                                                            <td>
                                                                                <div class="action-buttons">
                                                                                    <a asp-action="Details" asp-controller="Projects" 
                                                                                       asp-route-id="@project.ProjectID" 
                                                                                       class="btn btn-action-primary" title="@Localizer["View Project"]">
                                                                                        <i class="fas fa-eye"></i>
                                                                                    </a>
                                                                                    <a asp-action="Edit" asp-controller="Projects" 
                                                                                       asp-route-id="@project.ProjectID" 
                                                                                       class="btn btn-action-warning" title="@Localizer["Edit Project"]">
                                                                                        <i class="fas fa-edit"></i>
                                                                                    </a>
                                                                                </div>
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="empty-state">
                                                            <div class="empty-icon">
                                                                <i class="fas fa-project-diagram"></i>
                                                            </div>
                                                            <div class="empty-title">@Localizer["No Projects Found"]</div>
                                                            <div class="empty-message">@Localizer["No projects are currently associated with this indicator."]</div>
                                                            <a asp-action="Create" asp-controller="Projects" 
                                                               asp-route-indicatorId="@indicator.IndicatorCode"
                                                               class="btn btn-gradient-primary mt-3">
                                                                <i class="fas fa-plus me-2"></i> @Localizer["Create First Project"]
                                                            </a>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        index++;
                    }
                </div>
            }
            else
            {
                <div class="empty-state-main">
                    <div class="empty-icon-main">
                        <i class="fas fa-search"></i>
                    </div>
                    <div class="empty-title-main">@Localizer["No Results Found"]</div>
                    <div class="empty-message-main">@Localizer["Try adjusting your filters or search criteria."]</div>
                    <a asp-action="IndicatorAndProject" class="btn btn-gradient-primary mt-4">
                        <i class="fas fa-refresh me-2"></i> @Localizer["View All"]
                    </a>
                </div>
            }
        </div>
    </div>
</div>

