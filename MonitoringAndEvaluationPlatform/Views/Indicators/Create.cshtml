@model MonitoringAndEvaluationPlatform.Models.Indicator

@{
    ViewData["Title"] = "Create New Indicator";
    Layout = "~/Views/Shared/_DashboardHomeLayout.cshtml";
    var isSubOutputLocked = ViewBag.SelectedSubOutputCode != null;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Indicators</a></li>
                    @if (isSubOutputLocked)
                    {
                        <li class="breadcrumb-item"><a asp-controller="SubOutputs" asp-action="Details" asp-route-id="@ViewBag.SelectedSubOutputCode">SubOutput</a></li>
                    }
                    <li class="breadcrumb-item active" aria-current="page">Create New</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Create New Indicator</h2>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Indicator Details</h5>
                </div>

                <div class="card-body">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter indicator name" required />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                            <div class="form-text">Provide a clear, measurable name for this indicator.</div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Unit" class="form-label fw-bold"></label>
                            <input asp-for="Unit" class="form-control form-control-lg" placeholder="e.g., %, persons, USD, etc." />
                            <span asp-validation-for="Unit" class="text-danger small"></span>
                            <div class="form-text">Enter the unit of measurement for this indicator.</div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="IndicatorImpact" class="form-label fw-bold"></label>
                            <select asp-for="IndicatorImpact" class="form-select form-select-lg">
                                <option value="+">+ (Positive - Higher is better)</option>
                                <option value="-">- (Negative - Lower is better)</option>
                            </select>
                            <span asp-validation-for="IndicatorImpact" class="text-danger small"></span>
                            <div class="form-text">Select whether higher or lower values represent better performance.</div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Atif" class="form-label fw-bold"></label>
                            <input asp-for="Atif" class="form-control form-control-lg" placeholder="Enter Atif value" />
                            <span asp-validation-for="Atif" class="text-danger small"></span>
                            <div class="form-text">Enter the Atif classification for this indicator.</div>
                        </div>

                        @if (isSubOutputLocked)
                        {
                            <div class="alert alert-info mb-4">
                                <i class="fas fa-link me-2"></i>
                                This indicator will be linked to suboutput: <strong>@ViewBag.SelectedSubOutputName</strong>
                                <input type="hidden" asp-for="SubOutputCode" value="@ViewBag.SelectedSubOutputCode" />
                            </div>
                        }
                        else
                        {
                            <div class="form-group mb-4">
                                <label asp-for="SubOutputCode" class="form-label fw-bold"></label>
                                <select asp-for="SubOutputCode" class="form-select form-select-lg" asp-items="@ViewBag.SubOutputCode" required>
                                    <option value="">-- Select SubOutput --</option>
                                </select>
                                <span asp-validation-for="SubOutputCode" class="text-danger small"></span>
                                <div class="form-text">Select which suboutput this indicator measures.</div>
                            </div>
                        }

                        <div class="form-group mb-4">
                            <label asp-for="Target" class="form-label fw-bold"></label>
                            <input asp-for="Target" type="number" class="form-control form-control-lg" placeholder="Enter target value" />
                            <span asp-validation-for="Target" class="text-danger small"></span>
                            <div class="form-text">Enter the target value for this indicator.</div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="TargetYear" class="form-label fw-bold"></label>
                            <input asp-for="TargetYear" type="date" class="form-control form-control-lg" />
                            <span asp-validation-for="TargetYear" class="text-danger small"></span>
                            <div class="form-text">Select the target year for achieving this indicator.</div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Source" class="form-label fw-bold"></label>
                            <input asp-for="Source" class="form-control form-control-lg" placeholder="Enter data source" />
                            <span asp-validation-for="Source" class="text-danger small"></span>
                            <div class="form-text">Specify the source of data for this indicator.</div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Weight" class="form-label fw-bold"></label>
                            <input asp-for="Weight" type="number" step="0.01" min="0.01" max="1" class="form-control form-control-lg" placeholder="Enter weight (0.01 to 1.0)" />
                            <span asp-validation-for="Weight" class="text-danger small"></span>
                            <div class="form-text">Enter the weight for this indicator (between 0.01 and 1.0). Default is 1.</div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Concept" class="form-label fw-bold"></label>
                            <textarea asp-for="Concept" class="form-control form-control-lg" rows="3" placeholder="Enter indicator concept"></textarea>
                            <span asp-validation-for="Concept" class="text-danger small"></span>
                            <div class="form-text">Define the concept or definition of this indicator.</div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control form-control-lg" rows="3" placeholder="Enter indicator description"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                            <div class="form-text">Provide a detailed description of this indicator.</div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="MethodOfComputation" class="form-label fw-bold"></label>
                            <textarea asp-for="MethodOfComputation" class="form-control form-control-lg" rows="3" placeholder="Enter method of computation"></textarea>
                            <span asp-validation-for="MethodOfComputation" class="text-danger small"></span>
                            <div class="form-text">Explain how this indicator is calculated.</div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Comment" class="form-label fw-bold"></label>
                            <textarea asp-for="Comment" class="form-control form-control-lg" rows="2" placeholder="Enter any additional comments"></textarea>
                            <span asp-validation-for="Comment" class="text-danger small"></span>
                            <div class="form-text">Add any additional notes or comments about this indicator.</div>
                        </div>

                        <div class="form-check mb-4">
                            <input asp-for="IsCommon" class="form-check-input" type="checkbox" />
                            <label asp-for="IsCommon" class="form-check-label fw-bold"></label>
                            <div class="form-text">Check if this is a common indicator used across multiple projects.</div>
                        </div>

                        <div class="form-check mb-4">
                            <input asp-for="Active" class="form-check-input" type="checkbox" checked />
                            <label asp-for="Active" class="form-check-label fw-bold"></label>
                            <div class="form-text">Check to make this indicator active.</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Create Indicator
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


    <style>
        .card {
            border-radius: 0.5rem;
            border: none;
        }

        .form-control-lg, .form-select-lg {
            padding: 0.75rem 1rem;
            font-size: 1.05rem;
        }

        .breadcrumb {
            background-color: transparent;
            padding: 0;
        }

        .alert-info {
            background-color: #e7f6fe;
            border-color: #b8e2fb;
        }

        .form-text {
            font-size: 0.85rem;
            color: #6c757d;
        }

        .input-group-text {
            min-width: 3rem;
            justify-content: center;
        }
    </style>




    <script>
        // Client-side validation enhancement
        (function() {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
