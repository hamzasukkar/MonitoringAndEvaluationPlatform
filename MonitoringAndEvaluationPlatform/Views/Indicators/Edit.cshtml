@model MonitoringAndEvaluationPlatform.Models.Indicator

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_ResultsFrameworkLayout.cshtml";
}

<h1>Edit</h1>

<h4>Indicator</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IndicatorCode" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit" class="control-label"></label>
                <input asp-for="Unit" class="form-control" placeholder="e.g., %, persons, USD, etc." />
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IndicatorImpact" class="control-label"></label>
                <select asp-for="IndicatorImpact" class="form-control">
                    <option value="+">+ (Positive - Higher is better)</option>
                    <option value="-">- (Negative - Lower is better)</option>
                </select>
                <span asp-validation-for="IndicatorImpact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Atif" class="control-label"></label>
                <input asp-for="Atif" class="form-control" />
                <span asp-validation-for="Atif" class="text-danger"></span>
            </div>
@*             <div class="form-group">
                <label asp-for="Trend" class="control-label"></label>
                <input asp-for="Trend" class="form-control" />
                <span asp-validation-for="Trend" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="SubOutputCode" class="control-label"></label>
                <select asp-for="SubOutputCode" class="form-control" asp-items="ViewBag.SubOutputCode"></select>
                <span asp-validation-for="SubOutputCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Target" class="control-label"></label>
                <input asp-for="Target" type="number" class="form-control" />
                <span asp-validation-for="Target" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TargetYear" class="control-label"></label>
                <input asp-for="TargetYear" type="date" class="form-control" />
                <span asp-validation-for="TargetYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Source" class="control-label"></label>
                <input asp-for="Source" class="form-control" />
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" type="number" step="0.01" min="0.01" max="1" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Concept" class="control-label"></label>
                <textarea asp-for="Concept" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Concept" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MethodOfComputation" class="control-label"></label>
                <textarea asp-for="MethodOfComputation" class="form-control" rows="3"></textarea>
                <span asp-validation-for="MethodOfComputation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="IsCommon" class="form-check-input" type="checkbox" />
                <label asp-for="IsCommon" class="form-check-label"></label>
            </div>
            <div class="form-check">
                <input asp-for="Active" class="form-check-input" type="checkbox" />
                <label asp-for="Active" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

