    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // JavaScript to update dropdown button text when an item is selected
        document.querySelectorAll('.dropdown-item-custom').forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                const dropdownButton = this.closest('.dropdown').querySelector('.dropdown-toggle');
                const span = dropdownButton.querySelector('span');
                span.textContent = this.textContent;

                // Add visual feedback
                dropdownButton.classList.add('btn-outline-primary');
                dropdownButton.classList.remove('btn-light');
                setTimeout(() => {
                    dropdownButton.classList.add('btn-light');
                    dropdownButton.classList.remove('btn-outline-primary');
                }, 500);
            });
        });
    </script>
</body>
</html>