@model IEnumerable<MonitoringAndEvaluationPlatform.Models.Framework>
@{
    ViewData["Title"] = "Monitoring";
    Layout = "~/Views/Shared/_ResultsFrameworkLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SDG Alignment</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/layout-styles.css" asp-append-version="true" />
</head>
<body>
    @foreach (var item in Model)
    {
        <div class="container my-4">
            <div class="card p-3 shadow-sm">
                <div class="row">
                    <!-- Left Section -->
                    <div class="col-md-6 align-center">
                        <img src="~/img/sdgs.png" alt="SDG Icon" class="icon">
                        <div>
                            <h6 class="mb-2">Results Framework</h6>
                            <div class="d-flex flex-wrap gap-3">
                                <div class="text-center">
                                    <div class="circle">0%</div>
                                    <span class="icon-text">Performance</span>
                                </div>
                                <div class="text-center">
                                    <div class="circle">0%</div>
                                    <span class="icon-text">Disbursement</span>
                                </div>
                                <div class="text-center">
                                    <div class="circle">0%</div>
                                    <span class="icon-text">Monitoring</span>
                                </div>
                                <div class="text-center">
                                    <div class="circle">0%</div>
                                    <span class="icon-text">Assessment</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Right Section -->
                    <div class="col-md-6">
                        <ul class="list-unstyled stats">
                            <li><strong>Goals:</strong> 17</li>
                            <li><strong>Targets:</strong> 57</li>
                            <li><strong>Indicators:</strong> 0</li>
                            <li><strong>Projects:</strong> 3</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    } 
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>