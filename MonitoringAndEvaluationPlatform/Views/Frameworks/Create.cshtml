@model MonitoringAndEvaluationPlatform.Models.Framework
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Localization
@{
    ViewData["Title"] = "Create New Framework";
    Layout = "~/Views/Shared/_ResultsFrameworkLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">@Localizer["Framework Details"]</h5>
                </div>

                <div class="card-body">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label fw-bold">@Localizer["Name"]</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder=@Localizer["Enter framework name"] required />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                           @*  <div class="form-text">@Localizer["Give your framework a descriptive name that identifies its purpose."]</div> *@
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2">@Localizer["Create Framework"]</i>
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">@Localizer["Cancel"]</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


    <style>
        .card {
            border-radius: 0.5rem;
            border: none;
        }

        .form-control-lg {
            padding: 0.75rem 1rem;
            font-size: 1.05rem;
        }

        .breadcrumb {
            background-color: transparent;
            padding: 0;
        }
    </style>


    <script>
        // Example client-side validation enhancement
        (function() {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');

            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
