@model MonitoringAndEvaluationPlatform.Models.Framework

@{
    ViewData["Title"] = "Framework Details";
    Layout = "~/Views/Shared/_ResultsFrameworkLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="page-title">Framework Details</h1>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.Code" class="btn btn-primary btn-edit">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <hr class="section-divider" />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Framework Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-details">
                            <tbody>
                                <tr>
                                    <th class="w-25">@Html.DisplayNameFor(model => model.Name)</th>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.IndicatorsPerformance)</th>
                                    <td>
                                        <span>

                                            @Math.Round(Model.IndicatorsPerformance, 0)
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.DisbursementPerformance)</th>
                                    <td>
                                        <span>
                                            @Math.Round(Model.DisbursementPerformance, 0)
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.FieldMonitoring)</th>
                                    <td>
                                        <span>
                                            @Math.Round(Model.FieldMonitoring, 0)
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.ImpactAssessment)</th>
                                    <td>
                                        <span>
                                            @Math.Round(Model.ImpactAssessment, 0)
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-line me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-primary text-start">
                            <i class="fas fa-chart-pie me-2"></i>View Performance Dashboard
                        </a>
                        <a href="#" class="btn btn-outline-success text-start">
                            <i class="fas fa-file-export me-2"></i>Export Framework Data
                        </a>
                        <a href="#" class="btn btn-outline-warning text-start">
                            <i class="fas fa-bell me-2"></i>Set Up Alerts
                        </a>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-history me-2"></i>Recent Activity
                    </h5>
                </div>
                <div class="card-body">
                    <div class="activity-feed">
                        <div class="feed-item">
                            <div class="feed-icon bg-primary">
                                <i class="fas fa-edit"></i>
                            </div>
                            <div class="feed-content">
                                <span class="feed-text">Framework updated</span>
                                <small class="text-muted">2 days ago</small>
                            </div>
                        </div>
                        <div class="feed-item">
                            <div class="feed-icon bg-success">
                                <i class="fas fa-check"></i>
                            </div>
                            <div class="feed-content">
                                <span class="feed-text">Approval completed</span>
                                <small class="text-muted">1 week ago</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .page-title {
        color: #2c3e50;
        font-weight: 600;
    }

    .section-divider {
        border-top: 2px solid #e9ecef;
        opacity: 1;
    }

    .card {
        border: none;
        border-radius: 10px;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
        padding: 1rem 1.25rem;
    }

    .table-details th {
        font-weight: 500;
        color: #495057;
    }

    .table-details td {
        font-weight: 400;
    }

    .btn-edit {
        padding: 0.375rem 1rem;
    }

    .activity-feed {
        padding-left: 0;
        list-style: none;
    }

    .feed-item {
        display: flex;
        margin-bottom: 1rem;
    }

    .feed-icon {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        margin-right: 1rem;
        flex-shrink: 0;
    }

    .feed-content {
        flex-grow: 1;
    }

    .feed-text {
        display: block;
        font-weight: 500;
    }

    .badge {
        font-weight: 500;
        padding: 0.35em 0.65em;
    }

    .table-responsive {
        overflow-x: hidden;
    }
</style>